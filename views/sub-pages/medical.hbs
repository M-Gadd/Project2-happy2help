

<div class="container-fluid">
    <h4>List of medical recomendations:</h4>
    <br>
    <a href="/get-started/medicalInfo/add">Recommend Medical Place</a>
    <br>
    <br>
    
    <div class='row'>
        <div class="col-5">
            <ul class="list-group">
                {{#each medics}} {{#if ../theUser.isAdmin}}
                <li class="list-group-item marker lii-{{this._id}}">
                    <p> {{this.name}}</p>
                    <p> {{this.type}}</p>
                    <p> {{this.description}}</p>
                    {{#if this.InActive}}
                    <button>
                        <a href="/get-started/medicalInfo/{{this._id}}/accept">Accept</a>
                    </button>
                    {{/if}}
                    <button>
                        <a href="/get-started/medicalInfo/{{this._id}}/delete">Delete</a>
                    </button>
                </li>
                {{else}} {{#if this.Active}}
                <li class="list-group-item">
                    <p> {{this.name}}</p>
                    <p> {{this.type}}</p>
                    <p> {{this.description}}</p>
                </li>
                {{/if}} {{/if}} {{/each}}
            </ul>
        </div>
        <div class = "medmap col-7"></div>
    </div>
</div>

