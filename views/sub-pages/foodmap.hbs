<div class="container-fluid">
    <h4>List of food recomendations:</h4>
    <br>
    <a href="/culture/food/add">Recommend Food</a>
    <br>   
    <br> 
    <div class='row'>
        <div class="col-5">
            <ul class="list-group">
                {{#each restos}} {{#if ../theUser.isAdmin}}
                <li class="list-group-item marker li-{{this._id}}">
                    <p>{{this.name}} </p>
                    <p>{{this.type}}</p>
                    <p> {{this.description}}</p>
                    {{#if this.InActive}}
                    
                    <button>
                        <a href="/food/{{this._id}}/accept">Accept</a>
                    </button>
                    {{/if}}
                    <button>
                        <a href="/food/{{this._id}}/delete">Delete</a>
                    </button>
                </li>
                {{else}} {{#if this.Active}}
                <li class="list-group-item">
                    <p>{{this.name}} </p>
                    <p>{{this.type}}</p>
                    <p> {{this.description}}</p>
                </li>
                {{/if}} {{/if}} {{/each}}
            </ul>
        </div>
        <div class="foodmap col-7"></div>
    </div>
</div>



